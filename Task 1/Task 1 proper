}

void bubbleSort(std::vector<Item>& items, bool (*compare)(const Item&, const Item&)) {
   size_t n = items.size();
    for (size_t i=0; i < n - 1; ++i) {
        for (size_t j = 0; j < n - 1; ++j) {
            if(compare(items[j], items[i + 1])) {
                std::swap(items[j], items[j + 1]);
            }
        }
    }
}


